{
  "name": "gw-text",
  "version": "1.0.5",
  "description": "Text formatting and utilities",
  "browser": "dist/gw.js",
  "main": "dist/index.js",
  "module": "js/index.js",
  "scripts": {
    "compile": "tsc --build tsconfig.json",
    "bundle": "rollup -c",
    "build": "npm run compile && npm run bundle",
    "serve": "python -m SimpleHTTPServer",
    "test": "jest",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "files": [
    "dist/*",
    "js/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funnisimo/gw-text.git"
  },
  "keywords": [
    "text",
    "template"
  ],
  "author": "Funnisimo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/funnisimo/gw-text/issues"
  },
  "homepage": "https://github.com/funnisimo/gw-text#readme",
  "devDependencies": {
    "@babel/types": "^7.12.7",
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "rollup": "^2.33.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  }
}
